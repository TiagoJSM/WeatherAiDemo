@using ApiAiWeatherDemo.Models
@model WeatherQuestionModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Label("Ask a question like 'What is the weather in Edinburgh?'");
@using (Html.BeginForm("Post", "Weather", FormMethod.Post))
{
    @Html.LabelFor(m => m.Question)
    @Html.TextBoxFor(m => m.Question)
}

@if (@Model.ForecastResult != null)
{
    <div>Forecast in @Model.City</div>
    <div>
        @Html.Label("Max temperature: ")
        @Model.ForecastResult.TempMax
    </div>
    <div>
        @Html.Label("Min temperature: ")
        @Model.ForecastResult.TempMin
    </div>
    <div>
        @Html.Label("Humidity: ")
        @Model.ForecastResult.Humidity
    </div>
    <div>
        @Html.Label("Pressure: ")
        @Model.ForecastResult.Pressure
    </div>
}


